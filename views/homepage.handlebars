<div class="blog-post-container">
    <div class="blog-post-container">
        {{#each blogPosts as |blog|}}
        <a href="/singlepost/{{blog.id}}">
        <div class="single-blog-post">
            <div class="single-blog-header">
                <p>{{blog.blog_title}}</p>
                <p>Posted by {{blog.blog_username}} on {{format_date blog.blog_date}}</p>
            </div>
            <div>
                {{blog.blog_content}}
            </div>
        </div>
        </a>
        {{/each}}
    </div>
</div>